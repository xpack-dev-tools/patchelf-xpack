{
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.stablePeek": true,
  "files.watcherExclude": {
    "**/.git/**": true,
    "**/node_modules/*/**": true,
    "**/build/**": true
  },
  "markdownlint.config": {
    "MD041": false
  },
  "spellright.language": [
    "en_GB"
  ],
  "spellright.notificationClass": "warning",
  "cSpell.ignoreWords": [
    "Ionescu",
    "Liviu",
    "RPATH",
    "Somsubhra",
    "UCRT",
    "aarch",
    "armhf",
    "armv",
    "caffeinate",
    "cleanall",
    "cleanlibs",
    "cleanups",
    "coreutils",
    "dockerenv",
    "endraw",
    "greadlink",
    "grealpath",
    "ilegeul",
    "libexec",
    "liquidjs",
    "loglevel",
    "ncipollo",
    "nixos",
    "npmignore",
    "npmjs",
    "patchelf",
    "pipefail",
    "postversion",
    "prerelease",
    "readelf",
    "readlink",
    "realpath",
    "runpath",
    "userdel",
    "vers",
    "wksi",
    "workdir",
    "writable",
    "xattr",
    "xbbla",
    "xbbli",
    "xbbma",
    "xbbmi",
    "xpack",
    "xpacks"
  ]
}
